generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  name     String
  password String
  role     Role   @default(USER)
}

enum VersionType {
  snapshot
  release
}

model VerssionCache {
  name        String
  type        VersionType
  jarUrl      String
  releaseTime DateTime?
  @@id([name, type])
  @@index([type])
}
